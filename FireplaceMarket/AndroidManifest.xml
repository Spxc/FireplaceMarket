<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fireplace.market.fads"
    android:versionCode="1"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.amoCrm"
        android:allowBackup="true" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".SearchActivity"
            android:label="@string/SearchActivity" >
        </activity>
        <activity 
            android:name=".SettingsActivity"
            android:label="@string/SettingsActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity 
            android:name=".StorageActivity"
            android:label="@string/StorageActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity 
            android:name=".ApplicationsActivity"
            android:label="@string/AppsActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity 
            android:name=".RepositoriesActivity"
            android:label="@string/ReposActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity 
            android:name=".DetailedAppsActivity"
            android:label="@string/DetailedAppsActivity" >
        </activity>
        <activity 
            android:name=".DiffAdapter"
            android:label="@string/DetailedAppsActivity" >
        </activity>
    </application>
<uses-permission android:name="android.permission.INTERNET" /> 
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>